{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "COMPILE",
			"type": "shell",
			"command": "time g++ -g -Wall -std=c++2a -I ${cwd}/Dependencies/stb/include ${cwd}/BSP_OpenGL_Course/*.cpp -lGLEW -lGL -lglfw -lassimp -o BSP_OpenGL_Course",
			"options": {
				"cwd": "${workspaceRoot}/debug"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"label": "NINJA",
			"type": "shell",
			"command": "time cd build && cmake -G Ninja .. && ninja",
			"options": {
				"cwd": "${workspaceRoot}/"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}